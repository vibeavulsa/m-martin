VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_APP_ID=your_app_id_here
VITE_ADMIN_USER=admin
VITE_ADMIN_PASS=your_admin_password_here
VITE_WHATSAPP_NUMBER=5500000000000
VITE_SITE_URL=https://mmartinestofados.com.br

# Mercado Pago (chaves públicas apenas — chaves secretas ficam no servidor/Cloud Functions)
VITE_MERCADO_PAGO_PUBLIC_KEY=your_mercado_pago_public_key_here

# Vercel Postgres (via Neon) — adicionado automaticamente pelo painel Vercel ao criar o banco
# Também pode ser copiado de: Vercel Dashboard → Storage → seu banco → .env.local

# Recommended for most uses
DATABASE_URL=postgresql://user:password@host-pooler.region.aws.neon.tech/database?sslmode=require

# For uses requiring a connection without pgbouncer
DATABASE_URL_UNPOOLED=postgresql://user:password@host.region.aws.neon.tech/database?sslmode=require

# Parameters for constructing your own connection string
PGHOST=host-pooler.region.aws.neon.tech
PGHOST_UNPOOLED=host.region.aws.neon.tech
PGUSER=your_db_user
PGDATABASE=your_database_name
PGPASSWORD=your_db_password

# Parameters for Vercel Postgres Templates
POSTGRES_URL=postgresql://user:password@host-pooler.region.aws.neon.tech/database?sslmode=require
POSTGRES_URL_NON_POOLING=postgresql://user:password@host.region.aws.neon.tech/database?sslmode=require
POSTGRES_USER=your_db_user
POSTGRES_HOST=host-pooler.region.aws.neon.tech
POSTGRES_PASSWORD=your_db_password
POSTGRES_DATABASE=your_database_name
POSTGRES_URL_NO_SSL=postgresql://user:password@host-pooler.region.aws.neon.tech/database  # somente para desenvolvimento local
POSTGRES_PRISMA_URL=postgresql://user:password@host-pooler.region.aws.neon.tech/database?connect_timeout=15&sslmode=require
